{% form_theme form 'PolcodeCasperBundle:Form:fields.html.twig' %}

{% extends "PolcodeCasperBundle::base.html.twig" %}

{% block jumbotron %}
    <div class="jumbotron">
        <h1>Add an event</h1>
        <p class="lead">Cras justo odio, dapibus ac facilisis in, egestas eget quam. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus.</p>
    </div>    
{% endblock %}

{% block content %}
    <div id="add-event-form">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal col-sm-offset-2 col-sm-8' }}) }}
            {{ form_errors(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.public) }}
            {{ form_row(form.country) }}
            {{ form_row(form.city) }}
            {{ form_row(form.postcode) }}
            {{ form_row(form.date) }}       
            {{ form_row(form.duration) }}
            {{ form_row(form.description) }}
            {{ form_row(form.maxGuests) }}
            {{ form_row(form.signupDeadline) }}       
        {{ form_end(form) }}   
    
        <div class="clearfix"></div>

        <div id="map-panel">
            <input type="button" value="Set the marker" onclick="codeAddress()">
        </div>
        <div id="map-canvas"></div>
        
    </div>
       
{% endblock %}
