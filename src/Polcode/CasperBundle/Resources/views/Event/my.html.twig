{% extends "PolcodeCasperBundle::base.html.twig" %}

{% block jumbotron %}
    <div class="jumbotron">
        <h1>Your events</h1>
        <p class="lead">Cras justo odio, dapibus ac facilisis in, egestas eget quam. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus.</p>
    </div>    
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Events created by you</th>                    
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>City</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for ownedEvent in ownedEvents %}
                <tr>
                    <td>{{ ownedEvent.name }}</td>
                    <td>{{ ownedEvent.date|date('Y-m-d') }}</td>
                    <td>{{ ownedEvent.city }}</td>
                    <td>
                        <a><span class="glyphicon glyphicon-remove"></span></a>
                        <a href="{{ path('edit_event', {'id': ownedEvent.id}) }}"><span class="glyphicon glyphicon-edit"></span></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>                
{% endblock %}